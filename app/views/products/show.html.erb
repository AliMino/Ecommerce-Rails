<p id="notice"><%= notice %></p>

<p>
  <strong>Images:</strong>
  <br>
  <% @product.images.each do |image| %>
    <%= image_tag image, width: '200px', height: '200px' %>
  <% end %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand.name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<p>
  <strong>Seller:</strong>
  <%= @product.user.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<% if @product.copon && !@product.copon.is_expired %>
  <p>  
    <strong>Copon:</strong>
    <%= @product.copon.discount %>
    <%= @product.copon.get_symbol %>
    <% if @product.copon.is_available_for(current_user) %>
      <button name="use_copon_btn" id="<%= @product.copon.id %>">use this copon </button>
    <% end %>
  </p>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
