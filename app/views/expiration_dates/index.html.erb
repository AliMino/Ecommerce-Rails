<p id="notice"><%= notice %></p>

<h1>Expiration Dates</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expiration_dates.each do |expiration_date| %>
      <tr>
        <td><%= expiration_date.date %></td>
        <td><%= link_to 'Show', expiration_date %></td>
        <td><%= link_to 'Edit', edit_expiration_date_path(expiration_date) %></td>
        <td><%= link_to 'Destroy', expiration_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

