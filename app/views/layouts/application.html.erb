<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <% if current_user %>
      <div>
        <%= link_to_unless_current current_user.name, edit_user_registration_path, method: :get, :class => 'navbar-link'  %>
        <p> <%= current_user.role %> </p>
        <%= image_tag current_user.avatar, width: '80px', height: '80px', class: 'rounded' %>
      </div> <br>
      <%= link_to_unless_current "Home", root_path, method: :get, :class => 'navbar-link'  %> <br>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> <br>
    <% end %>
    <%= yield %>
  </body>
</html>
